openapi: 3.1.0
info:
  title: QuantBot Trade API
  version: "1.0"
servers:
  - url: https://gptradingbot.up.railway.app   # <-- put yours here
paths:
  /trade:
    post:
      operationId: generateTrade
      summary: Generate one trade idea targeting â‰¥50 % ROI
      requestBody:
        required: true
        content:
          application/json:
            schema:
              type: object
              properties:
                cash:
                  type: number
                  description: Dollars the user wants to deploy
              required: [cash]
      responses:
        "200":
          description: A single trade idea
          content:
            application/json:
              schema:
                $ref: "#/components/schemas/TradeIdea"
components:
  schemas:
    TradeIdea:
      type: object
      properties:
        strategy: {type: string}
        underlying: {type: string}
        cost: {type: number}
        maxProfit: {type: number}
        expectedROI: {type: number}
        thesis: {type: string}
        legs:
          type: array
